<h1>
  Вход
</h1>

<%= form_for @user, remote: true do |f| %>
  <div class="field">
    <%= f.label 'Email'%>
    <%= f.text_field :email, type: :email%>
  </div>
  <div class="field">
    <%= f.label 'Пароль' %>
    <%= f.text_field :password_digest, type: :password %>
  </div>
  <div class="field">
    <%= f.submit 'Войти' %>
  </div>
<% end %>